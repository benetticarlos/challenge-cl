<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <% if (notifications.length) { %>
    <% notifications.forEach(function(entry) { %>
      <div class="card" style="
    margin-top: 2vh;">
        <div class="card-header" style="display: flex;
    flex-direction: row;
    justify-content: flex-end;">
          <%= entry.date %>
            <%= entry.hour %>
        </div>
        <% if (entry.read) {%> 
         <div class="card-body">
           <% } else { %>
           <div class="card-body" style="background-color: darkgrey;
    font-weight: bold;">  
            <% } %>
              
        <div class="card-body">
          <h5 class="card-title">
            <%= entry.title %>
          </h5>
          <p class="card-text">
            <%= entry.description %>
          </p>

          <a href="/notifications/edit/<%= entry.id %>">
          <button type="button" class="btn btn-info">
            Mark as read
          </button>
        </a>
          <a href="/notifications/delete/<%= entry.id %>">

          <button type="button" class="btn btn-danger">
            Delete
          </button>
          </a>
        </div>
      </div>


      <% }); %>




        <% } else { %>
          <h1>no existen entradas</h1>
          <% } %>



</body>

</html>